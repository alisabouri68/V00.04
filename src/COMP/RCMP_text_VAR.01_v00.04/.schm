{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Text Component Schema",
    "description": "Schema for rendering styled text components using the RCMP_text component",
    "type": "object",
    "properties": {
        "children": {
            "type": "string",
            "description": "The text content to display"
        },
        "size": {
            "type": "string",
            "enum": [
                "xs",
                "sm",
                "base",
                "lg",
                "xl",
                "2xl",
                "3xl",
                "4xl"
            ],
            "default": "base"
        },
        "weight": {
            "type": "string",
            "enum": [
                "thin",
                "light",
                "normal",
                "medium",
                "semibold",
                "bold",
                "extrabold",
                "black"
            ],
            "default": "normal"
        },
        "align": {
            "type": "string",
            "enum": [
                "left",
                "center",
                "right",
                "justify"
            ],
            "default": "left"
        },
        "as": {
            "type": "string",
            "description": "HTML tag to render",
            "enum": [
                "span",
                "p",
                "div",
                "h1",
                "h2",
                "h3",
                "h4",
                "h5",
                "h6",
                "strong",
                "em",
                "label",
                "small"
            ],
            "default": "span"
        },
        "color": {
            "type": "string",
            "description": "Tailwind or custom text color class",
            "default": "text-text-light-custom"
        },
        "className": {
            "type": "string",
            "description": "Additional Tailwind or utility classes",
            "default": ""
        }
    },
    "required": [
        "children"
    ]
}