{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dropdown Props",
  "description": "Schema for the reusable Dropdown component props",
  "type": "object",
  "properties": {
    "options": {
      "type": "array",
      "description": "List of dropdown options to select from",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the option"
          },
          "name": {
            "type": "string",
            "description": "Display name for the option"
          },
          "icon": {
            "description": "Optional icon component (ReactNode)",
            "type": "string"
          }
        },
        "required": ["id", "name"]
      }
    },
    "onSelect": {
      "description": "Callback function called when an option is selected",
      "instanceof": "Function"
    },
    "selected": {
      "description": "Currently selected option",
      "type": "object",
      "nullable": true,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "placeholder": {
      "type": "string",
      "description": "Text shown when no option is selected",
      "default": "Select..."
    },
    "className": {
      "type": "string",
      "description": "Additional custom class for container"
    }
  },
  "required": ["options", "onSelect"]
}
