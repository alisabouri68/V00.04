{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Navigation Menu",
  "description": "Schema for mobile sidebar navigation menu items",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the nav item"
      },
      "title": {
        "type": "string",
        "description": "Label shown under the icon"
      },
      "href": {
        "type": "string",
        "description": "Route path for this item"
      },
      "icon": {
        "type": "string",
        "description": "Icon name or placeholder (ReactNode not directly serializable)"
      }
    },
    "required": ["id", "title", "href", "icon"]
  }
}
