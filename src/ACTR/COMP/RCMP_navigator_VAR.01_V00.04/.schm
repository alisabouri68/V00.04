{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sidebar Navigation Items",
  "description": "Schema for sidebar navigation menu items used in Sidebar component",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique ID for navigation item"
      },
      "title": {
        "type": "string",
        "description": "Text label for the navigation item"
      },
      "icon": {
        "type": "string",
        "description": "Icon identifier or serialized JSX component (as string placeholder)"
      },
      "href": {
        "type": "string",
        "format": "uri-reference",
        "description": "Relative path to navigate to"
      }
    },
    "required": ["id", "title", "icon", "href"]
  }
}
